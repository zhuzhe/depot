




<h1>Welcome Register</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
<p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password,:size=>40 %>
  </p>
  <p>
    <%= f.label :password_comfirmation,"Confirm" %>
    <%= f.password_field :password_confirmation,:size=>40 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>