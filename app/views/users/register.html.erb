




<h1>New Customer</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password,:size=>40 %>
  </p>
  <p>
    <%= f.label :password_comfirmation,"Confirm" %><br />
    <%= f.password_field :password_confirmation,:size=>40 %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>