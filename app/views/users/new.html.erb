<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
   <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password,:size=>40 %>
  </p>
  <p>
    <%= f.label :password_comfirmation,"Confirm" %><br />
    <%= f.password_field :password_confirmation,:size=>40 %>
  </p>
  <%unless session[:admin?]%>
  <p>
    <%= f.label :admin %><br />
    <%= f.select :admin,[["YES",true],["NO",false]] %>
  </p>
  <%end%>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>